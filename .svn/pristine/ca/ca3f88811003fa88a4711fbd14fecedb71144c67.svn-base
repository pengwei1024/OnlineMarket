@charset "utf-8";

/* 去除默认属性 */
* {
	margin: 0;
	padding: 0;
	font: 14px "Microsoft Yahei";
}

img {
	border: 0;
}

ul,ol {
	list-style-type: none;
}

.left {
	float: left;
}

.right {
	float: right;
}

.clear{
	clear:both;
}
ul, ol, li, form, dl {
	list-style: none;
}
p {
	text-indent: 2em;
	margin: 1em 0em;
	line-height: 1.5;
}
TD {
	color: #777;
	font-size: 12px;
	padding: 10px;
}
/*模块编码*/
.left {
	float: left;
}
.right {
	float: right;
}
.center {
	text-align: center;
}
.clear {
	clear: both;
	height: 0px;
	font-size: 0px;
	line-height: 0px;
	display: block;
}
.none {
	display: none;
}


/* 基本样式 */
body {
	background: #fff;
}

#title_bar {
	width: 100%;
	height: 30px;
	background: #F7F7F7;
}

#header .topbar {
	height: 30px;
	background: #F7F7F7;
	border-bottom: 1px solid #EEEEEE;
}

#header .topbar>span {
	font-size: 12px !important;
	line-height: 30px;
	margin-left: 8%;
}
#header .topbar>span a{
	font-size: 12px !important;
	margin:0 3px;
}
#header .topbar ul{
	line-height: 30px;
	margin-right:8%;
}
#header .topbar ul li {
	display: inline-block;
	margin:0 8px;
}
#header .topbar ul li a{
	font-size:12px;
}


#header .logo {
	height: 92px;
	width:87%;
	margin:8px auto 0;
}

#header .logo .header-search{
	margin:0 0 0 25px;
}


#header .nav{
	width:87%;
	margin:0 auto;
	background:#E4393C;
}
#header .nav ul{
	margin:0;	
}
#header .nav ul li{
	display:inline-block;	
}
#header .nav ul li:first-child{
	position:relative;
}
#header .nav ul li:first-child span{
	display:inline-block;
	width:20px;
	height:20px;
	background:url("../images/nav_btn_down.png");
	position:relative;
	top:5px;
	left:90px;
}

#header .nav ul li:first-child a{
	text-align:left;
	padding-left:10px;
	width:200px;
	background:#CD2A2C;
}
#header .nav ul li:first-child a:hover{
	background:#CD292B;
}
#header .nav ul li:first-child ol{
	display:none;
	position:absolute;
	z-index:10;
}
#header .nav ul li:first-child ol li{
	display:block;
	height: 26px;
	line-height: 26px;
	padding-left: 13px;
	cursor:pointer;
	border-bottom:1px solid #fff;
}
#header .nav ul li:first-child ol li:hover{
	background:#fff;
}
#header .nav ul li:first-child:hover span{
	background:url("../images/nav_btn_up.png");
}
#header .nav ul li:first-child:hover ol{
	width:100%;
	display:block;
	background:#FAFAFA;
	border:2px solid #E4393C;
	border-top:0;
}
#header .nav ul li a{
	display:block;
	height:40px !important;
	text-decoration:none;
	line-height:40px;
	min-width:85px;
	text-align:center;
	color: #fff;
	font: 700 15px/40px "microsoft yahei";
}
#header .nav ul li a:hover{
	background:#A40000;
}

#header .logo>a,#header .logo .header-search,#header .logo .header-toolbar
{
	float: left;
}
#header .logo .header-search-box{
	margin:10px 0 5px 0;
}
#header .logo .header-search-box input{
	display:inline-block;
	
}
#header .logo .header-search-box input[type='text']{
	width:421px;
	padding-left:5px;
	height:37px;
}
#header .logo .header-search-box input[type='button']{
	width:85px;
	height:39px;
	position:relative;
	left:-6px;

}
#header .header-toolbar{
	margin:12px 0 0 20px;
}
#header .header-toolbar .header-toolbar-t{
	margin-left:10px;
	float:left;
	border:1px solid #EFEFEF;
	position:relative;
}
#header .header-toolbar .header-toolbar-t >span{
	display:block;
	background-color: #F7F7F7;
	z-index: 10;
	height: 30px;
	cursor:pointer;
	line-height:30px;
	text-align:center;
	position:relative;
	padding:0 10px 0 28px;
	background:url("../images/20130330A_2.png") #F7F7F7 -116px -23px no-repeat;
}
#header .header-toolbar .header-toolbar-t:last-child >span{
	background-position:-116px -82px;
}
#header .header-toolbar  .header-toolbar-submenu{
	min-width:300px;
	min-height:100px;
	position:absolute;
	background:#fff;
	display:none;
	z-index:9;
	border:1px solid  #F7F7F7;
	top:29px;
	box-shadow:-1px 1px 2px #ccc;
	
} 
#header .header-toolbar .header-toolbar-order>ul>li{
	width:130px;
	display:inline-block;
	text-align:center;
	padding:10px 0;
}
#header .header-toolbar .header-toolbar-shop-empty>b{
	display:inline-block;
	width:61px;
	height:55px;
	background:url("../images/20130330A_2.png");
	position:relative;
	top:20px;
	left:10px;
}
#header .header-toolbar .header-toolbar-shop-empty>span{
	color:#ccc;
}

/*加入购物车*/
#header .header-toolbar .header-toolbar-shop{
	width:350px;
	padding-bottom:10px;
}
#header .header-toolbar .header-toolbar-shop button{
	width: 120px;
	height: 30px;
	margin-top: 6px;
	background: #E4393C;
	color: #fff;
	border:0;
	font-weight: 700;
	line-height: 30px;
	border-radius: 5px;
	margin:0 10px;
}
#header .header-toolbar .header-toolbar-shop-sumary{
	text-align:right;
	margin:6px 10px;
}
#header .header-toolbar .header-toolbar-shop-sumary>span{
	color:#E4393C;
	font-weight:700;
	font-size:18px;
}

#header .header-toolbar .header-toolbar-t:last-child:hover >span{
	background-position:-116px -113px;
}
#header .header-toolbar .header-toolbar-t:hover >span{
	box-shadow:-1px -1px 2px #ccc;
	border-bottom:0;
	background:url("../images/20130330A_2.png") #fff -116px -53px no-repeat;
}
#header .header-toolbar .header-toolbar-shop-count{
	background:#E4393C;
	color:#fff;
	display:inline-block;
	padding:0 5px;
	border-radius:16px;
	text-align:center;
}

#header .header-toolbar .header-toolbar-t:hover .header-toolbar-submenu{
	display:block;
	
}


#content{
	min-height:250px;
	width:87%;
	margin:0 auto;
}



/* footer */
#footer {
	
}

#footer .footer_pic_new {
	border-top: 2px solid #fa5000;
	width: 100%;
	height: 80px;
	background: url("../images/footer_pic_bg.png") #FAFAFA center center
		no-repeat;
	border-bottom: 1px solid #ebebeb;
}

#footer table {
	width: 90%;
	margin: 15px auto 0;
}

#footer table tr {
	margin: 10px 0;
}

#footer table tr td {
	text-align: center;
	margin: 0 20px;
	padding: 5px 20px;
	width: 17%;
	font-size: 12px;
}

#footer table tr:not(.title ) td:hover {
	color: #f44d20;
	cursor: pointer;
	text-decoration: underline;
}

#footer table .title td {
	background: url("../images/public_footer_title5.png") no-repeat;
	padding-left: 40px;
	height: 40px;
	font-weight: 600;
	font-size: 16px;
}

#footer table .title td:nth-child(1) {
	background-position: 30px 0;
}

#footer table .title td:nth-child(2) {
	background-position: 30px -40px;
}

#footer table .title td:nth-child(3) {
	background-position: 30px -80px;
}

#footer table .title td:nth-child(4) {
	background-position: 30px -120px;
}

#footer table .title td:nth-child(5) {
	background-position: 30px -160px;
}

#footer table .title td:nth-child(6) {
	background-position: 30px -200px;
}

#footer .footer_nav,#footer .footer_copyright,#footer .footer_copyright_sign
{
	text-align: center;
}

#footer .footer_nav_box {
	border-top: 1px solid #ccc;
	margin: 20px 0 20px;
	padding-top: 10px;
}

#footer .footer_nav a {
	border-right: 1px solid #ccc;
	padding: 0 15px;
}

#footer .footer_nav a:last-child {
	border-right: 0;
}

#footer .footer_copyright {
	margin: 10px 0;
	font-size: 12px;
}


.back-to-top {
    width: 50px;
    height: 50px;
    background: url("../images/backtop.png") no-repeat 0 0;
    opacity: 0.7;
    position: fixed;
    right: 10px;
    bottom: 10px;
    z-index: 999;
    display: none;
    cursor: pointer;
}

.back-to-top:hover {
    background-position: 0 -52px;
    opacity: 1;
}


/*---滚动条默认显示样式--*/
::-webkit-scrollbar-thumb {
	background-color: #C2C2C2;
	height: 50px;
	outline-offset: -2px;
	*outline: 2px solid #fff;
	-webkit-border-radius: 4px;
	*border: 2px solid #fff;
}

/*---鼠标点击滚动条显示样式--*/
::-webkit-scrollbar-thumb:hover {
	background-color: #7D7D7D;
	height: 50px;
	-webkit-border-radius: 4px;
}

::-webkit-scrollbar-thumb:active {
	height: 50px;
	background-color: #000;
	-webkit-border-radius: 4px;
}

/*---滚动条大小--*/
::-webkit-scrollbar {
	width: 8px;
	height: 8px;
}

/*---滚动框背景样式--*/
::-webkit-scrollbar-track-piece {
	background-color: #EEEEEE;
	-webkit-border-radius: 0;
}