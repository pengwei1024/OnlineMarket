.containter {
	width: 980px;
	overflow: hidden;
}
.main {
	width: 650px;
	float: left;
}
.sidebar {
	width: 330px;
	float: left;
}
.box, .content, .ads {
	margin: 0px 10px 20px;
}
/*查看更多*/
#addMore {
	clear: left;
	height: 30px;
	line-height: 30px;
	text-align: center;
	border: 1px solid #ccc;
	background: #fff;
	margin: 0px 10px 30px;
	display: none;
	cursor: pointer;
}
#addMore:hover {
	background: #eee;
	color: #05f;
	border-color: #aaa
}
/*瀑布流页面*/
.hangTitle {
	height: 100px;
	margin: 0px 10px 20px;
	padding: 20px 40px;
	background: url("intiate.jpg") #000;
	color: #fff;
	border-radius: 0px 0px 8px 8px;
	_overflow: hidden;
}
.hangTitle h1 {
	height: 40px;
	font-size: 30px;
	letter-spacing: 0.5em;
}
.hangTitle span {
	height: 20px;
	display: block;
	font-size: 14px;
	color: #bbb;
}
.hangTitle p {
	font-size: 16px;
	text-indent: 0em;
	margin: 15px 0px 0px;
	color: #ddd;
}
#waterfall {
	margin-top: 20px;
	overflow: hidden;
}
#waterfall .col {
	width: 25%;
	float: left;
}
#waterfall dl {
	border: 1px solid #bbb;
	background: #fff;
	margin: 0px 10px 20px;
	display: none;
	border-radius: 8px;
	overflow: hidden;
	box-shadow: 2px 5px 10px #ccc;
}
#waterfall dl dt {
	line-height: 50px;
	font-size: 18px;
	color: #05a;
	text-align: center;
	
}
#waterfall dl dt> a{
	padding:5px 0;
}
#waterfall dl dd {
	padding: 10px;
	overflow: hidden;
	border-top: 1px dashed #ddd;
}
#waterfall dl dd img {
	width: 180px;
	border: 5px solid #eee;
	display: block;
	margin: auto;
}
#waterfall dl dd p {
	font-size: 14px;
	color: #666;
	margin: 0px
}
#waterfall dl dd.more {
	padding: 0px;
	line-height: 40px;
	font-size: 16px;
}

#waterfall dl dd.more span:nth-child(1){
	color: #e02f2f;
	font: 26px/36px tahoma,Arial;
	margin-left:15px;
}
#waterfall dl dd.more span:nth-child(2){
	display:inline-block;
	background:#F33C3C;
	color:#fff;
	padding:3px 6px;
	border-radius:5px;
	cursor:pointer;
	float:right;
	margin:5px;
}

#waterfall dl a {
	display: block;
	color: #aaa;
	text-align: center;
}
#waterfall dl a:hover {
	background: #f5f5f5;
	color: #05c
}
