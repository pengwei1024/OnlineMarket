<%@ page contentType="text/html;charset=UTF-8" language="java"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://"
			+ request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
	String themePath = basePath;
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<base href="<%=basePath%>">

<title>Login</title>

<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<link rel="stylesheet" type="text/css"
	href="<%=themePath%>/css/login.css">
<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	
	-->

</head>

<body style="background:#f2f2f2;">
	<%
		String error = (String) request.getAttribute("error");
	%>
	<div class="makeup1">
		<img style="width:1000px;height:100px;"
			src="<%=themePath%>/images/new1.GIF" />
	</div>
	<div class="container">
		<div class="container_left">
			<img class="Img" src="<%=themePath%>/images/new.GIF">
		</div>
		<div class="container_right">
			<div class="top">
				<span style="font-size:16px;color:#FF0000;"><strong>用户登录</strong></span>
			</div>
			<form action="${pageContext.request.contextPath }/Login"
				method="post">
				<div class="middle">
					<input type="text" name="userEmail" placeholder="userEmail"
						class="Id" />
				</div>
				<div class="middle">
					<input type="text" name="userPassword" placeholder=" password"
						class="Id" />
				</div>
				<div class="middle">
					<input style="color:#FFFFFF;font-weight:bolder" type="submit"
						name="submit" value="Log In" class="Id" />
				</div>
			</form>
		</div>
	</div>
	<div class="makeup2">
		<img src="<%=themePath%>/images/new2.GIF" />
	</div>
	<%
		if (error != null) {
	%>
	<script>
		alert('登录失败，用户密码错误！！');
	</script>
	<%
		}
	%>
</body>
</html>
